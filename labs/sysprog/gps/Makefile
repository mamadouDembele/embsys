all: init libptmx libnmea gps

init:
	mkdir -p bin lib include

gps:
	cd src/app && make

libptmx: init
	cd src/lib/ptmx && make

libnmea: init
	cd src/lib/nmea && make

clean:
	find . -name *.o | xargs rm -f
	rm -rf bin
	rm -rf lib
	rm -rf include

ok: init libptmx libnmea_ok gps

libnmea_ok:
	cd src/lib/nmea && make ok


##commamde pour la création du fichier binaire

#gcc -Wall -o hello_world.o -c example.c

## commande pour la creation d'une librairie partagé

#gcc -o hello -lm hello_world.o
